<% if @answer.valid? %>
  $("#answer-<%= @answer.id %>").html('<%= j render @answer %>');
  $('.flash_messages').html('<%= j render 'layouts/flash_messages' %>');
  $('.edit-answer-link').click(function (e) {
    e.preventDefault();
    editAnswer(this);
  });
<% else %>
    $('.answer_edit_form_errors').html('<%= j render 'shared/error_messages', target: @answer %>');
<% end %>
