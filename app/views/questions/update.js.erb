<% if @question.valid? %>
  $('.question').html('<%= j render @question %>');
  $('.flash_messages').html('<%= j render 'layouts/flash_messages' %>');
  $('.edit-question-link').click(function (e) {
    e.preventDefault();
    editQuestion(this);
  });
<% else %>
    $('.question_form_errors').html('<%= j render 'shared/error_messages', target: @question %>');
<% end %>
